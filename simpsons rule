#include <stdio.h>
#include <math.h>

// Function definition
float f(float x) {
    return (400*pow(x,5) - 900*pow(x,4) + 675*pow(x,3) - 200*pow(x,2) + 25*x + 0.2);
}

int main() {
    float a = 0, b = 1; // limits
    int n = 20; // number of intervals (must be even)
    float h, inte_val = 0.0;
    int i;

    h = (b - a) / n; // step size

    // Simpson's 1/3 rule calculation
    for (i = 0; i <= n; i++) {
        float x = a + i * h;

        if (i == 0 || i == n)
            inte_val += f(x);
        else if (i % 2 == 0)
            inte_val += 2 * f(x);
        else
            inte_val += 4 * f(x);
    }

    inte_val = (h * inte_val) / 3.0;

    printf("Integral value = %.5f\n", inte_val);
    return 0;
}
